/* pages/home/home.wxss */

.home_item {
  background-color: antiquewhite;
  width: 100%;
  height: 350px;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo {
  height: 300rpx;
  width: 100%;
  padding-top: 30px;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
}

.homeinfo {
  width: 100%;
  display: flex;
  height: 300rpx;
  flex-direction: column;
  background-color: beige;
}

.homeinfo_btn {
  flex-direction: row;
  display: flex;
}

.info-btn {
  margin-top: 15px;
  width: 20%;
}

.homeinfo_test-item {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 13px 0;
  text-align: center;
  font-size: 0;
  display: block;
}

.homeinfo_item {
  flex-direction: row;
  display: flex;
}

.homeinfo_test {
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
