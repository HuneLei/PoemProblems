/* pages/challenge/challenge.wxss */

.challenge_item {
  background-color: antiquewhite;
  width: 100%;
  height: 350px;
}

.block-view {
  height: 200px;
}

.item-btn {
  margin-top: 15px;
  width: 80%;
}

.item-tab__conten {
  padding-top: 60px;
  text-align: center;
}

.item-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.item-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  width: 100%;
}

.item-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 13px 0;
  text-align: center;
  font-size: 0;
}

.item-navbar__title {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.item-tab {
  position: relative;
  height: 100%;
}
